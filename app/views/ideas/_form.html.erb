<%= form_for @idea do |f| %>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.text_field :status, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tagline %>
    <%= f.text_field :tagline, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class:'form-control', rows:'5' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-lg' %>
  </div>
<% end %>
