<%= form_for @entry do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :tagline %>
    <%= f.text_field :tagline %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "title") %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
